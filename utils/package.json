{
  "name": "swtc-utils",
  "version": "1.1.4",
  "description": "swtc utils",
  "main": "src/utils.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "prettier": "prettier",
    "pretty-quick": "pretty-quick",
    "prettier:check": "prettier -c --no-semi src/*.js",
    "prettier:tabs": "prettier --no-semi --use-tabs --write package.json src/*.js",
    "eslint": "eslint src/*.js",
    "test": "mocha \"test/test_utils.js\"",
    "test:extended": "mocha \"test/*.js\"",
    "test:nyc": "nyc --reporter=html --reporter=text mocha test/test_utils.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swtcca/swtc-lib.git"
  },
  "keywords": [
    "swtc",
    "jingtum",
    "utils"
  ],
  "author": "Lospring Liu <lospringliu@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/swtcca/swtc-lib/issues"
  },
  "homepage": "https://github.com/swtcca/swtc-lib#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --no-restage --verbose --bail"
    }
  },
  "dependencies": {
    "bignumber.js": "^5.0.0",
    "lodash": "^4.17.11",
    "swtc-wallet": "^1.1.11",
    "url": "^0.11.0",
    "utf8": "^2.1.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-json-schema": "^1.5.0",
    "eslint": "^5.15.3",
    "extend": "^3.0.2",
    "husky": "^1.3.1",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  }
}
