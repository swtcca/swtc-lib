{
  "name": "swtc-lib",
  "version": "1.6.13",
  "description": "swtc-lib for jingtum blockchain",
  "main": "src/index.js",
  "browser": {
    "ws": "./src/wswrapper.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "prettier": "prettier",
    "pretty-quick": "pretty-quick",
    "prettier:check": "prettier -c tssrc/*.ts",
    "prettier:tabs": "prettier --use-tabs --write package.json tssrc/*.ts",
    "tsc": "tsc",
    "tslint": "tslint tssrc/*.ts",
    "gulp": "gulp dev",
    "gulp:production": "gulp production",
    "build": "tsc; webpack",
    "build:production": "tsc; webpack --config prod.webpack.config",
    "dev": "webpack-dev-server",
    "test": "tsc; mocha \"test/test*.js\"",
    "test:extended": "tsc; mocha \"test/*.js\"",
    "test:nyc": "nyc --reporter=html --reporter=text mocha test/test*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swtcca/swtc-lib.git"
  },
  "keywords": [
    "swtc",
    "jingtum",
    "account",
    "ledger",
    "remote"
  ],
  "author": "Lospring Liu <lospringliu@gmail.com>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/swtcca/swtc-lib/issues"
  },
  "homepage": "https://github.com/swtcca/swtc-lib#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --no-restage --verbose --bail"
    }
  },
  "dependencies": {
    "bignumber.js": "^5.0.0",
    "lru-cache": "^4.0.1",
    "sha1": "^1.1.1",
    "swtc-nativescript": "^1.0.0",
    "swtc-transaction": "^1.2.0",
    "ws": "^6.2.1"
  },
  "devDependencies": {
    "@types/node": "^11.13.7",
    "chai": "^4.2.0",
    "chai-json-schema": "^1.5.0",
    "eslint": "^5.15.3",
    "esm": "^3.2.22",
    "gulp": "^4.0.0",
    "husky": "^1.3.1",
    "jsbn": "^1.1.0",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "sinon": "^7.2.4",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3",
    "webpack-stream": "^5.2.1"
  }
}
